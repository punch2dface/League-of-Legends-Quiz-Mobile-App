<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp"
    tools:context=".MainMenuActivity">

    <ImageView
        android:id="@+id/resultRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:background="@drawable/challenger"/>

    <TextView
        android:id="@+id/resultScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x/y\nCorrect"
        android:textAlignment="center"
        android:textColor="#cdbe91"
        android:textSize="40sp"
        android:layout_toRightOf="@id/resultRank"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="140dp"/>

    <TextView
        android:id="@+id/resultTierTV"
        android:text="Platinum Tier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#cdbe91"
        android:textSize="20sp"
        android:layout_below="@id/resultScore"
        android:layout_toRightOf="@id/resultRank"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_alignRight="@+id/resultScore"
        android:layout_alignLeft="@id/resultScore"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbackground"
        android:text="Exit"
        android:textColor="#cdbe91"
        android:layout_below="@id/resultTierTV"
        android:layout_toRightOf="@id/resultRank"
        android:layout_alignLeft="@id/resultTierTV"
        android:layout_alignRight="@id/resultTierTV"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
</RelativeLayout>